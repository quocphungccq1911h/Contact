@using Contact.Domain.PostViewModel
@model PostContactCustomerVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@if (TempData["SuccessMsg"] != null)
{
    <h1>Bạn đã liên hệ thành công</h1>
}
else if (TempData["ErrorMsg"] != null)
{
    <h1>Liên hệ không thành công</h1>
    <p>Vui lòng gọi 19000001 để biết thêm chi tiết</p>
}
else
{
    <form asp-action="Index" asp-controller="Home" method="post">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <h2>Trang liên hệ</h2>
        <div class="form-group">
            <label for="exampleInputEmail1">Họ tên</label>
            <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập vào họ tên" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Số điện thoại</label>
            <input type="tel" asp-for="Phone" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập vào số điện thoại" required>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập vào email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Nội dung</label>
            <textarea class="form-control" asp-for="Content" id="exampleFormControlTextarea1" rows="3" placeholder="Nhập vào nội dung liên hệ" required></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Gửi đi</button>
    </form>
}


